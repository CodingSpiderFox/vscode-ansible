{
  "name": "vsc-extension-ansible",
  "displayName": "Ansible",
  "description": "VSCode extension for Ansible",
  "version": "0.0.1",
  "publisher": "yungez",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "ansible",
    "playbook",
    "azure",
    "ansible module"
  ],
  "activationEvents": [
    "onCommand:vsc-extension-ansible.ansible-playbook",
    "onCommand:vsc-extension-ansible.ansible-commands",
    "onCommand:vsc-extension-ansible.ansible-terminal"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "vsc-extension-ansible.ansible-playbook",
        "title": "Run Ansible Playbook",
        "args": "playbook",
        "category": "ansible"
      },
      {
        "command": "vsc-extension-ansible.ansible-commands",
        "title": "Run Ansible Commands",
        "args": "arguments",
        "category": "ansible"
      },
      {
        "command": "vsc-extension-ansible.ansible-terminal",
        "title": "Terminal",
        "args": "arguments",
        "category": "ansible"
      }
    ],
    "snippets": [
      {
        "language": "yaml",
        "path": "./snippets/snippets.json"
      }
    ],
    "grammars": [
      {
        "language": "yaml",
        "scopeName": "source.ansible",
        "path": "./syntaxes/Ansible.tmLanguage"
      }
    ],
    "keybindings": [
      {
        "command": "vsc-extension-ansible.ansible-terminal",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Ansible Extension Configuration",
      "type": "object",
      "properties": {
        "ansible.credentialsFile": {
          "type": "string",
          "default": "credentials.yml",
          "description": "Ansible credential file path",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "eslint": "node ./node_modules/eslint/bin/eslint.js ."
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.6.1",
    "path": "^0.12.7",
    "fs-extra": "^4.0.2",
    "yamljs": "^0.3.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "extensionDependencies": [
    "ms-vscode.azure-account"
  ]
}
